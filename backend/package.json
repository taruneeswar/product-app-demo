{
  "name": "backend",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/main.js",
    "lint": "eslint src --ext .ts",
    "migration:up": "typeorm-ts-node-commonjs -d src/dataSource.ts migration:run",
    "migration:down": "typeorm-ts-node-commonjs -d src/dataSource.ts migration:revert",
    "migration:generate": "sh -c 'typeorm-ts-node-commonjs -d src/dataSource.ts migration:generate src/migrations/\"$1\"' _",
    "migration:create": "sh -c 'typeorm-ts-node-commonjs migration:create src/migrations/\"$1\"' _"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
